#!/usr/bin/env bash

script_name=`basename $0`
echo "${script_name} <SentenceMIM API key> <ENC_TOKENIZER> <DEC_TOKENIZER> <ENC_MODEL> <DEC_MODEL> <GPU_NUM>"

GITHUB_KEY=$1
ENC_TOKENIZER=${2:-yttm}
DEC_TOKENIZER=${3:-yttm}
ENC_MODEL=${4:-/raid/shared_tokenizer.32000.BPE.model}
DEC_MODEL=${5:-/raid/shared_tokenizer.32000.BPE.model}
GPU_NUM=${6:-8}
LABEL_SMOOTHING=${7:-0.1}

INSTANCE=dgx1v.32g.${GPU_NUM}.norm.beta
NGC_CONTAINER='nvcr.io/nvidia/pytorch:20.11-py3'
EXP_NAME=en_es_wmt20-${ENC_TOKENIZER}_${DEC_TOKENIZER}

WANDBLOGIN=1dadc548dae732414fcb97918f25942325315029
PROJECT=en_es_wmt20-${ENC_TOKENIZER}_${DEC_TOKENIZER}



# /raid/shared_tokenizer.32000.BPE.model
# /data/smim/smim.1796586.model


#  ngc dataset upload --source tokenizer.BPE.68957.8192.model --desc "WMT16 eng-esp bpe tokeizer" tokenizer.BPE.68957.8192.model
# Dataset ID: 76234
# ngc dataset upload --source smim.1796586.model --desc "smim.1796586.model" smim.1796586.model
# Dataset ID: 76327

# command

read -d '' cmd <<EOF
nvidia-smi \
&& apt-get update \
&& apt-get install -y libsndfile1 ffmpeg \
&& pip install --upgrade wandb \
&& pip install Cython \
&& wandb login ${WANDBLOGIN} \
&& git clone https://michalivne:${GITHUB_KEY}@github.com/seraphlabs-ca/SentenceMIM.git \
&& pushd SentenceMIM \
&& pip install -r requirements.txt \
&& popd \
&& git clone https://github.com/michalivne/NeMo.git \
&& cd NeMo/ \
&& git checkout nmt_embeddingMIM \
&& ./reinstall.sh \
&& cd examples/nlp/machine_translation \
&& cp -R /data/ds/backtranslated/train.clean.en-es.backtranslated.es-en.tok.*.shuffled /raid/ \
&& cp -R /data/ds/backtranslated/shared_tokenizer.32000.BPE.model /raid/ \
&& cp -R /data/ds/parallel/newstest2012-en-es.clean.tok.* /raid/ \
&& cp -R /data/ds/parallel/newstest2013-en-es.clean.tok.* /raid/ \
&& cp -R /data/smim/smim.1796586.model /raid/ \
&& python enc_dec_nmt.py \
      --config-path=conf \
      --config-name=emim_base \
      exp_manager.name=${ENC_TOKENIZER}-${DEC_TOKENIZER} \
      'trainer.gpus=-1' \
      '~trainer.max_epochs' \
      +trainer.max_steps=300000 \
      +trainer.val_check_interval=1000 \
      +exp_manager.exp_dir=/results/${ENC_TOKENIZER}-${DEC_TOKENIZER} \
      +exp_manager.create_wandb_logger=True \
      +exp_manager.wandb_logger_kwargs.name=${EXP_NAME} \
      +exp_manager.wandb_logger_kwargs.project=${PROJECT} \
      +exp_manager.resume_if_exists=True \
      +exp_manager.resume_ignore_no_checkpoint=True \
      +exp_manager.create_checkpoint_callback=True \
      +exp_manager.checkpoint_callback_params.monitor=val_sacreBLEU \
      +exp_manager.checkpoint_callback_params.mode=max \
      +exp_manager.checkpoint_callback_params.save_top_k=10 \
      model.beam_size=4 \
      model.max_generation_delta=5 \
      model.label_smoothing=${LABEL_SMOOTHING} \
      +model.src_language=es \
      +model.tgt_language=en \
      model.encoder.hidden_size=1024 \
      model.encoder.inner_size=4096 \
      model.encoder.num_attention_heads=16 \
      model.encoder.attn_layer_dropout=0.1 \
      model.encoder.ffn_dropout=0.1 \
      model.encoder.num_layers=6 \
      model.decoder.hidden_size=1024 \
      model.decoder.inner_size=4096 \
      model.decoder.num_attention_heads=16 \
      model.decoder.attn_layer_dropout=0.1 \
      model.decoder.ffn_dropout=0.1 \
      model.decoder.num_layers=6 \
      model.optim.lr=0.0004 \
      model.encoder_tokenizer.tokenizer_name=${ENC_TOKENIZER} \
      model.decoder_tokenizer.tokenizer_name=${DEC_TOKENIZER} \
      model.encoder_tokenizer.tokenizer_model=${ENC_MODEL}  \
      model.decoder_tokenizer.tokenizer_model=${DEC_MODEL}  \
      model.train_ds.tokens_in_batch=16000 \
      model.train_ds.src_file_name=/raid/train.clean.en-es.backtranslated.es-en.tok.es.shuffled \
      model.train_ds.tgt_file_name=/raid/train.clean.en-es.backtranslated.es-en.tok.en.shuffled \
      model.validation_ds.src_file_name=/raid/newstest2012-es-en.clean.tok.src \
      model.validation_ds.tgt_file_name=/raid/newstest2012-es-en.clean.tok.ref \
      model.test_ds.src_file_name=/raid/newstest2013-es-en.clean.tok.src \
      model.test_ds.tgt_file_name=/raid/newstest2013-es-en.clean.tok.ref \
      model.train_ds.use_tarred_dataset=true \
      model.preproc_out_dir=/raid/preproc \
      trainer.amp_level=O0 \
      trainer.precision=32 \
      model.train_ds.use_cache=false
EOF

# launch script
set -e

ngc batch run \
  --name "${EXP_NAME}" \
  --preempt RUNONCE \
  --image "${NGC_CONTAINER}" \
  --ace nv-us-west-2 \
  --instance "${INSTANCE}" \
  --org nvidian \
  --result /results/ \
  --datasetid 75726:/data/ds/ \
  --datasetid 76234:/data/tokenizer/ \
  --datasetid 76327:/data/smim/ \
  --commandline "${cmd}"
